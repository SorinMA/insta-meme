<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h3></span> Profile Page</h3>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/profile/upload" class="btn btn-default btn-sm">Upload photo</a>
        <a href="/profile/search" class="btn btn-default btn-sm">Search User page</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>CreatedAt</strong>: <%= user.created_at %><br>
                        <strong>password</strong>: <%= user.username %>
                        <a href="/profile/showPhotos" class="btn btn-default btn-sm">Show photos</a>
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>
